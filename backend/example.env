ENVIRONMENT=development
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO
RELOAD=true

DB_HOST=localhost
DB_PORT=5432
DB_NAME=netmonitor_db
DB_USER=netmonitor_user
DB_PASSWORD=netmonitor_password
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20
DB_POOL_TIMEOUT=30

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

CORS_ORIGINS=http://localhost:3000,http://192.168.10.12:3000

SQLITE_DB_PATH=/app/data/mcp_anomalies.db
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=-2000
SQLITE_TEMP_STORE=MEMORY
SQLITE_MMAP_SIZE=30000000000

SERVICE_HOST=0.0.0.0
SERVICE_PORT=5555
ANALYSIS_INTERVAL=300
BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=5
ANOMALY_RETENTION_DAYS=30

API_HOST=0.0.0.0
API_PORT=5000
API_PREFIX=/api/v1

MODEL_DIR=/app/models
MODEL_PATH=/models
MODEL_VERSION=1.0.0
MODEL_UPDATE_INTERVAL=3600
MODEL_THRESHOLD=0.8

FEATURE_WINDOW=300
MIN_SAMPLES=10
ANOMALY_THRESHOLD=0.95
MAX_ANOMALIES=100

NOTIFICATION_ENABLED=true
NOTIFICATION_URL=http://notification-service:8080/notify
NOTIFICATION_TOKEN=your_token
NOTIFICATION_TIMEOUT=10
NOTIFICATION_MAX_RETRIES=3

SFTP_HOST=model-server
SFTP_PORT=22
SFTP_USER=model-user
SFTP_PASSWORD=your_password
SFTP_REMOTE_PATH=/models/wifi
SFTP_TIMEOUT=30

PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password

AGENT_INTERVAL=300
CACHE_TTL=300

SECRET_KEY=dev
FLASK_ENV=development
DEBUG=true
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.10.14

MAX_WORKERS=4
MEMORY_LIMIT=2048

LOG_DIR=/var/log/mcp_service
LOG_RETENTION=30
LOG_FORMAT=json

TRAINING_DATA_PATH=/data/training
TRAINING_INTERVAL=86400
MIN_TRAINING_SAMPLES=1000

EXPORT_PATH=/data/exports
EXPORT_RETENTION=90
EXPORT_FORMAT=csv

BACKUP_PATH=/data/backups
BACKUP_RETENTION=30
BACKUP_SCHEDULE="0 0 * * *"

SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/0
DATABASE_URL=sqlite:///app.db
# =============================================================================
# MCP Service Agent Configuration
# =============================================================================
AGENT_PROCESSING_INTERVAL=60
AGENT_BATCH_SIZE=1000
AGENT_LOOKBACK_WINDOW=30

# =============================================================================
# Threshold Configuration
# =============================================================================
THRESHOLD_SIGNAL_STRENGTH=-70
THRESHOLD_PACKET_LOSS_RATE=0.1
THRESHOLD_RETRY_RATE=0.2
THRESHOLD_DATA_RATE=24

# =============================================================================
# Resource Monitoring Configuration
# =============================================================================
RESOURCE_MONITORING_ENABLED=true
RESOURCE_CHECK_INTERVAL=60
RESOURCE_THRESHOLD_CPU=80
RESOURCE_THRESHOLD_MEMORY=85
RESOURCE_THRESHOLD_DISK=90
RESOURCE_THRESHOLD_NETWORK=1000000

# =============================================================================
# Prometheus Configuration
# =============================================================================
PROMETHEUS_HOST=localhost
PROMETHEUS_PATH=/metrics

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_FILE=logs/wifi_agent.log
